<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.brianmk.showtime.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <GridView
        android:id="@+id/movie_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="@dimen/grid_column_width"
        android:verticalSpacing="@dimen/grid_vert_spacing"
        android:horizontalSpacing="@dimen/grid_horz_spacing"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:padding="5dp"
        android:numColumns="auto_fit"/>

</RelativeLayout>
